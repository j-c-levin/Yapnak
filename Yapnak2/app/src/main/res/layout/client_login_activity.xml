<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff3a3a3c"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="496dp"
            android:layout_weight="5.30">

            <ImageButton
                android:background="@drawable/yapnakmonster"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton" />

            <EditText
                android:id="@+id/phoneNumberEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:alpha="0.4"
                android:hint="Restaurant ID"
                android:inputType="phone"
                android:digits="+0123456789"
                android:textColor="#FFF"
                android:textColorHint="#FFF" />

            <TextView
                android:id="@+id/clientLoginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneNumberEdit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="Login"
                android:textColor="#FFF"
                android:textStyle="bold" />

            <Button
                android:id="@+id/clientLoginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.4"
                android:layout_alignBaseline="@+id/clientLoginText"
                android:layout_alignBottom="@+id/clientLoginText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_below="@id/clientLoginButton"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

    </ScrollView>

</LinearLayout>

