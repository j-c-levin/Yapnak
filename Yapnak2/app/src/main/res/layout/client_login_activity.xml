<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff3a3a3c"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="496dp"
            android:layout_weight="5.30">

            <ImageButton
                android:background="@drawable/yapnakmonster"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton" />

            <EditText
                android:id="@+id/clientEmailEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:alpha="0.4"
                android:hint="Restaurant Client Email"
                android:inputType="textEmailAddress"
               android:textColor="#FFF"
                android:textColorHint="#FFF" />


            <EditText
                android:id="@+id/clientPassEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="220dp"
                android:alpha="0.4"
                android:inputType="textPassword"
                android:hint="Password"
                android:textColor="#FFF"
                android:textColorHint="#FFF" />



            <Button
                android:id="@+id/clientLoginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.4"
                android:layout_marginTop="100dp"
                android:text="Login"
                android:layout_below="@+id/clientEmailEdit"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="clientLogin"/>

            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_below="@id/clientLoginButton"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

    </ScrollView>

</LinearLayout>

