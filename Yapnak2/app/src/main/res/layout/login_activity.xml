<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:weightSum="1">

    <!-- android:background="#ff3a3a3c"
    android:textColor="#FFF"
    android:textColorHint="#FFF"
    android:background="@drawable/login_background"
    -->

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout

        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageButton
            android:background="@drawable/yapnakmonster"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton" />

        <com.frontend.yapnak.subview.MyEditText
            android:id="@+id/phoneNumberEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:alpha="0.4"
            android:textColor="#000"
            android:textColorHint="#000"
            android:hint="Phone Number"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:layout_alignParentLeft="true" />

        <com.frontend.yapnak.subview.MyEditText
            android:id="@+id/emailEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:alpha="0.4"
            android:textColor="#000"
            android:textColorHint="#000"
            android:hint="E-mail"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:layout_alignParentLeft="true" />

        <com.frontend.yapnak.subview.MyEditText
            android:textColor="#000"
            android:textColorHint="#000"
            android:id="@+id/passwordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneNumberEdit"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:alpha="0.4"
            android:imeOptions="actionGo"
            android:hint="Password "
            android:inputType="textPassword" />

        <com.frontend.yapnak.subview.MyEditText
            android:textColor="#000"
            android:textColorHint="#000"
            android:id="@+id/promoBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailEdit"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:alpha="0.4"
            android:hint="Promo Code"
            />

        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailEdit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Login"
            android:textStyle="bold" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailEdit"
            android:layout_marginTop="135dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:alpha="0.4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New to Yapnak?"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_below="@+id/loginButton"
            android:layout_alignLeft="@+id/imageButton" />

        <Button
            android:id="@+id/registerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Register"
            android:background="@android:color/transparent"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true">


            <!--<ImageView
                android:id="@+id/arrowDownUser"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/dropdown_arrow"/>

            <Button
                android:id="@+id/userButton"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:text="Client?"
                android:visibility="invisible"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#FFF"
                android:background="#FF8A80"/>
                -->

        </LinearLayout>


    </RelativeLayout>

</ScrollView>

</LinearLayout>

