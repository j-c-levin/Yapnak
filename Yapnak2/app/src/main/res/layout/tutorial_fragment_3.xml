<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:id="@+id/item2"
    android:background="@drawable/tutorial_background"
    android:descendantFocusability="blocksDescendants">

    <!--android:onClick="extendInfo"
    android:background="#EEEEEE"
    android:background="#E0E0E0"-->


    <RelativeLayout
        android:id = "@+id/extendHeight"
        android:orientation="vertical"
        android:layout_height="170dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:background="@drawable/curved_tutorial"
        android:weightSum="1"
        >

        <!--android:background="@color/bright_foreground_inverse_material_light"-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tempId">




            <ImageView
                android:id="@+id/heatIcon"
                android:layout_width="25dp"
                android:layout_height="15dp"
                android:visibility="visible"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignRight="@+id/subtitle" />

            <TextView
                android:id="@+id/title"
                style="@style/Base.TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:singleLine="false"
                android:text="sample1"
                android:textColor="#ff707070"
                android:textSize="18sp"
                android:scrollHorizontally="false"
                android:maxLines="3"
                android:textStyle="bold" />

            <com.pkmmte.view.CircularImageView
                android:id="@+id/logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/dropdown_arrow"
                app:border="true"
                app:border_color="#EEEEEE"
                app:border_width="4dp"
                app:shadow="true"


                />

            <TextView
                android:id="@+id/subtitle"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="40dp"
                android:scrollHorizontally="false"
                android:singleLine="false"
                android:textSize="13sp"
                android:maxLines="5"
                android:text="sample text here"
                android:textColor="#ff707070" />

            <TextView
                android:id="@+id/loyalty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="73dp"
                android:text="Loyalty Points:"
                android:textColor="#9E9E9E"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/loyaltyPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="73dp"
                android:layout_toRightOf="@id/loyalty"
                android:text="10"
                android:textColor="#9E9E9E"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="220dp"
                android:background="@drawable/locationicon_red"
                android:layout_alignTop="@+id/loyaltyPoints"
                />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="hello"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_alignBottom="@+id/loyaltyPoints"
                android:layout_toRightOf="@+id/locationIcon" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="100dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:id="@+id/extendIconLayout"
                android:layout_alignBottom="@+id/extendTextLayout">


                <Button
                    android:id="@+id/recommendMeal"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/custom_recommend"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/takeMeThere" />

                <Button
                    android:id="@+id/takeMeThere"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/custom_takemethere"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="39dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true" />

                <Button
                    android:id="@+id/feedbackButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/custom_rate"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/recommendMeal" />

                <Button
                    android:id="@+id/getDealButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/custom_rewards"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/feedbackButton" />






            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/extendTextLayout"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_marginTop="145dp">

                <TextView
                    android:id="@+id/recommendText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Recommend"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/takeMeThereText" />

                <TextView
                    android:id="@+id/takeMeThereText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Take Me There"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/rateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Rate"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/recommendText" />

                <TextView
                    android:id="@+id/rewardsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Get Deal"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/rateText"/>

            </RelativeLayout>





        </RelativeLayout>

        <!--
        <fragment
           android:name="com.example.nand.abc.ExtensionFragment"
           android:layout_width="match_parent"
           android:layout_height="100dp"
           android:id="@+id/itemExtension"


            >


        </fragment>

       -->

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <ImageView
            android:layout_marginLeft="40dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView"
            android:src="@drawable/linepoint_small" />

        <ImageView
            android:layout_marginLeft="60dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView2"
            android:src="@drawable/linepoint_small" />

        <ImageView
            android:layout_marginLeft="40dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView3"
            android:src="@drawable/linepoint_small" />

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView4"
            android:src="@drawable/linepoint_small" />

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#fff"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Click to Expand, in Order to View More Options"
            android:id="@+id/infoText"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp" /> -->

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:maxLines="4"
            android:gravity="right"
            android:textColor="#fff"
            android:text="Click this button, to take you to apps"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:maxLines="4"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="#fff"
            android:text="Click to Recommend Deal to Friend"
            android:layout_weight="0.23" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:maxLines="4"
            android:gravity="left"
            android:textColor="#fff"
            android:text="Click to Rate This Deal"
            android:layout_weight="0.11" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:maxLines="4"
            android:gravity="left"
            android:textColor="#fff"
            android:text="Click to Redeem Deal"/>





    </LinearLayout>


</LinearLayout>



