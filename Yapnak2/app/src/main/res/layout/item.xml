<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="1dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:animateLayoutChanges="true"
        app:cardCornerRadius="3dp"
        app:cardUseCompatPadding="true"
        app:contentPaddingBottom="8dp"
        app:contentPaddingRight="8dp"
        app:contentPaddingTop="8dp"
        app:contentPaddingLeft="4dp"
      >

        <ImageView
            android:id="@+id/heatLogo"
            android:background="@drawable/ic_heat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="300dp"/>


        <TextView
            android:id="@+id/title"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:singleLine="true"
            android:text="sample1"
            android:textColor="#ff707070"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.pkmmte.view.CircularImageView
            android:id="@+id/logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/mcdonalds"
            app:border="true"
            app:border_color="#EEEEEE"
            app:border_width="4dp"
            app:shadow="true" />

        <TextView
            android:id="@+id/subtitle"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:text="sample text here"
            android:textColor="#ff707070" />

        <TextView
            android:id="@+id/loyalty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="93dp"
            android:text="Loyalty Points:"
            android:textColor="#9E9E9E"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/loyaltyPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="93dp"
            android:text="10"
            android:textColor="#9E9E9E"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="93dp"
            android:background="@drawable/locationicon" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="96dp"
            android:text="hello"
            android:textColor="#9E9E9E"
            android:textSize="12sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/extendLayout"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@android:color/transparent"
            android:visibility="gone">

            <Button
                android:id="@+id/recommendMeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="120dp"
                android:text="Recommend Deal"
                android:textStyle="bold" />

            <Button
                android:id="@+id/takeMeThere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp"
                android:text="Take Me There"
                android:textStyle="bold" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>