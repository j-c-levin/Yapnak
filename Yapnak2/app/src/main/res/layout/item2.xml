<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:id="@+id/item2"
    android:descendantFocusability="blocksDescendants">

    <!--android:onClick="extendInfo"
    android:background="#EEEEEE"
    android:background="#E0E0E0"
    android:layout_height="105dp"-->


    <RelativeLayout
        android:id = "@+id/extendHeight"
        android:orientation="vertical"
        android:layout_height="105dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:background="@drawable/curved_card_item"
        android:weightSum="1"
        >

        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:id="@+id/buttonTutorialContainer"
            >

            <ImageView
                android:visibility="gone"
                android:id="@+id/buttonTutorial1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/speech_bubble"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/buttonTutorial2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/speech_bubble"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/buttonTutorial3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/speech_bubble"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/buttonTutorial4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="246dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/speech_bubble"/>
        </LinearLayout>

            <!--android:background="@color/bright_foreground_inverse_material_light"-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tempId">


            <ImageView
                android:id="@+id/heatIcon"
                android:layout_width="25dp"
                android:layout_height="15dp"
                android:visibility="visible"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignRight="@+id/subtitle" />


            <TextView
                android:id="@+id/title"
                style="@style/Base.TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:singleLine="false"
                android:text="sample1"
                android:textColor="#ff707070"
                android:textSize="15sp"
                android:scrollHorizontally="false"
                android:maxLines="3"
                android:textStyle="bold" />

            <com.pkmmte.view.CircularImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:shadow="true"
                android:src="@drawable/dropdown_arrow"
                android:background="@android:color/transparent"
                app:border="true"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                app:border_color="#EEEEEE"
                app:border_width="2dp"

                />

             <!--<com.frontend.yapnak.subview.MyImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/drparrow"
                app:border="true"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                app:border_color="#EEEEEE"
                app:border_width="2dp"
                app:shadow="true"
                /> -->

            <TextView
                android:id="@+id/subtitle"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="40dp"
                android:scrollHorizontally="false"
                android:singleLine="false"
                android:textSize="13sp"
                android:maxLines="5"
                android:text="sample text here"
                android:textColor="#ff707070" />

            <TextView
                android:id="@+id/foodStyle"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:scrollHorizontally="false"
                android:singleLine="false"
                android:textSize="10sp"
                android:maxLines="3"
                android:text="foodstyle"
                android:textColor="#ff707070"
                android:layout_alignTop="@+id/locationIcon"
                android:layout_alignLeft="@+id/subtitle" />

            <TextView
                android:id="@+id/loyalty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="73dp"
                android:text="Loyalty Points:"
                android:visibility="gone"
                android:textColor="#9E9E9E"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/loyaltyPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="73dp"
                android:layout_toRightOf="@id/loyalty"
                android:text="10"
                android:visibility="invisible"
                android:textColor="#9E9E9E"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible"
                android:layout_marginLeft="220dp"
                android:background="@drawable/locationicon_red"
                android:layout_alignTop="@+id/loyaltyPoints"
                 />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="hello"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_alignBottom="@+id/loyaltyPoints"
                android:layout_toRightOf="@+id/locationIcon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="100dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/extendIconLayout"
              android:layout_alignBottom="@+id/extendTextLayout">


              <Button
                  android:id="@+id/recommendMeal"
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:background="@drawable/custom_recommend"
                  android:onClick="recommendMealButton"
                  android:textSize="12sp"
                  android:textStyle="bold"
                  android:layout_marginLeft="46dp"
                  android:layout_alignParentTop="true"
                  android:layout_toRightOf="@+id/takeMeThere" />

              <Button
                  android:id="@+id/takeMeThere"
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:onClick="takeMeThereButton"
                  android:background="@drawable/custom_takemethere"
                  android:textSize="12sp"
                  android:textStyle="bold"
                  android:layout_marginLeft="29dp"
                  android:layout_alignParentTop="true"
                  android:layout_alignParentLeft="true" />

              <Button
                  android:id="@+id/feedbackButton"
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:layout_marginLeft="30dp"
                  android:onClick="feedbackButton"
                  android:background="@drawable/custom_rate"
                  android:textSize="12sp"
                  android:textStyle="bold"
                  android:layout_alignParentTop="true"
                  android:layout_toRightOf="@+id/recommendMeal" />

              <Button
                  android:id="@+id/getDealButton"
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:layout_marginLeft="26dp"
                  android:background="@drawable/custom_rewards"
                  android:textSize="12sp"
                  android:onClick="getDeal"
                  android:textStyle="bold"
                  android:layout_alignParentTop="true"
                  android:layout_toRightOf="@+id/feedbackButton" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/extendTextLayout"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginTop="145dp">

                <TextView
                    android:id="@+id/recommendText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Recommend"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/takeMeThereText" />

                <TextView
                    android:id="@+id/takeMeThereText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Take Me There"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/rateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Rate"
                    android:layout_marginLeft="28dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/recommendText" />

                <TextView
                    android:id="@+id/rewardsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Get Deal"
                    android:layout_marginLeft="28dp"
                    android:layout_toRightOf="@id/rateText"/>

            </RelativeLayout>
            </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:id="@+id/tutorial1"
        android:src="@drawable/tutorial1"
        android:layout_gravity="center_horizontal" />
    <ImageView
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:id="@+id/tutorial2"
        android:src="@drawable/tutorial2"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/buttonTextContainer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:visibility="gone"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/buttonTutorialText1"
            android:src="@drawable/button_tutorial1"/>

        <ImageView
            android:visibility="gone"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginLeft="90dp"
            android:id="@+id/buttonTutorialText2"
            android:src="@drawable/button_tutorial2"/>

        <ImageView
            android:visibility="gone"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginLeft="160dp"
            android:id="@+id/buttonTutorialText3"
            android:src="@drawable/button_tutorial3"/>

        <ImageView
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_marginLeft="250dp"
            android:id="@+id/buttonTutorialText4"
            android:src="@drawable/button_tutorial4"/>


    </LinearLayout>


</LinearLayout>



